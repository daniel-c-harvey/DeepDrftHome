{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES6", // or "ESNext" 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "wwwroot/js"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "bin/**/*",
    "obj/**/*"
  ]
}