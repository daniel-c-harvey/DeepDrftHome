{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "wwwroot/js",
    "sourceRoot": "/Interop",
    "mapRoot": "/js"
  },
  "include": [
    "Interop/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "bin/**/*",
    "obj/**/*",
    "publish/**/*"
  ]
}